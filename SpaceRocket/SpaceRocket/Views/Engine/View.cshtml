@using SpaceRocket.Models.EditViewModels;
@model EditEngineViewModel

<h1 class="mt-5">Edit Engine</h1>
<form method="post" action="View">
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">FuelType</label>
        <select class="form-control" asp-for="FuelType" asp-items="@(new SelectList(Model.Fuels, "Name", "Name"))">
            <option value="">Select Fuel Type</option>
        </select>
    </div>
    
    <div class="mb-3">
        <label for="" class="form-label">Thrust</label>
        <input type="text" class="form-control" asp-for="Thrust">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Weight</label>
        <input type="text" class="form-control" asp-for="Weight">
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Edit</button>
        <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Engine">Delete</button>
    </div>
</form>
